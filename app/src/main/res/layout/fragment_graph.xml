<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soumikshah.investmenttracker.view.graph.GraphFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/dropdown_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_investment_category"
            android:textSize="@dimen/investment_category"
            android:textColor="@color/investment_category"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/select_category"
            android:outlineAmbientShadowColor="@color/colorPrimary"/>

    </LinearLayout>
    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="60dp"
        android:id="@+id/pieChart_view" />

</RelativeLayout>